
{
  "compilerOptions": {

    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es5", "es6", "dom", "es7", "esnext"],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "redux": ["typings/redux.d.ts"],
      "shared/*": ["src/shared/*"],
      "schema": ["src/base/schema"]
    }
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.test.tsx"]
}